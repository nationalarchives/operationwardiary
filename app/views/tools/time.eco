<% translate = require 't7e' %>


<div class="annotation">
  <select name="hour">
    <% for i in [1..12]: %>
      <option><%= "0#{i}"[-2..-1] %></option>
    <% end %>    
  </select>
  <input name="minute" type="number" value="00" min="00" max="60" step="1">
  <select name="am">
    <option>AM</option>
    <option>PM</option>  
  </select>
</div>