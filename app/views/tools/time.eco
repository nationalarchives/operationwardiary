<% translate = require 't7e' %>


<div class="annotation">
  <select name="hour">
    <% for i in [1..12]: %>
      <option><%= "0#{i}"[-2..-1] %></option>
    <% end %>    
  </select>
  <select name="minute">
    <% for i in [0..59] by 15: %>
      <option><%= "0#{i}"[-2..-1] %></option>
    <% end %>    
  </select>
  <select name="am">
    <option>AM</option>
    <option>PM</option>  
  </select>
</div>