<% translate = require 't7e' %>
<% if @subjects?: %>
  <%- translate 'h2', "recents.comments" %>
  <ul class="recents">
    <% for subject in @subjects: %>
    <li>
      <a href="http://talk.operationwardiary.org/#/subjects/<%= subject.focus.name %>"><img src="<%= subject.focus.location.standard %>"></a>
      <p class="caption"><%- subject.comment.body %></p>
    </li>
    <% end %>
  </ul>
<% end %>