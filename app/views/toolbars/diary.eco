<% translate = require 't7e' %>

<ul class="categories">
  <% for tag in @tags: %>
    <li class="<%= tag %>">
      <input 
        type="radio" 
        name="category" 
        id="category-<%= tag %>" 
        value="<%= tag %>"
      >
      <label class="icon-<%= tag %>" for="category-<%= tag %>"><%- translate 'span', "noteTypes.#{tag}" %></label>
    </li>
  <% end %>
</ul>