<% translate = require 't7e' %>

<% if @groups?: %>
<%- translate 'h2', 'groups.title' %>
  <ul>
    <% for group in @groups: %>
    <% console.log group %>
    <li>
      <a href="#/classify/<%= group.id %>"><%= group.name %></a>
      <br>
      (<%= group.startdate %> &ndash; <%= group.enddate %>)
      <br>
      Pages: <%= group.stats.total %> Completed: <%= group.stats.complete %>
    </li>
    <% end %>
  </ul>
<% end %>