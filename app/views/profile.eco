
<% if @user: %>
  <h1><%- @user.name %></h1>

  <% if @user.project?: %>
    <h3>Pages transcribed: <%- @user.project.classification_count %></h3>
    <% if @user.project.groups?: %>
      <ul>
        <% for group in @groups: %>
        <li><%= group.name %>: <%= group.classification_count %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
  
<% else: %>
  <p>Login to view profile</p>
<% end %>
