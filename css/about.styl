#about
  background: $white
  color: $darkgrey
  padding: 2em 0 0
  font-family: $mont
  
  > h2
    padding: 0 1em
    margin: 0
    
  > div
    padding: 2em 2em 4em
  
  h2
    font-size: 2em
    text-transform: none
    
  .questions
    background: $lightgrey
  
    div
      -moz-column-count: 2
      -webkit-column-count: 2
      column-count: 2
  
  .project
    background: $lightgrey
    padding-bottom: 0
  
    > div
      -moz-column-count: 2
      -webkit-column-count: 2
      column-count: 2
      border-bottom: 1px solid grey
      padding-bottom: 4em