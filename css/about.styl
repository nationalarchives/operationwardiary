#about
  background: $white
  color: $darkgrey
  padding: 0
  font-family: $mont
  
  > h2
    padding: 1em 1em 0
    margin: 0
    
  > div
    padding: 1em 2em 3em
    
    &.intro
      padding: 1em 0 3em
      margin: 0 2em
      border-bottom: 1px solid grey
    
    > div
      -moz-column-count: 2
      -webkit-column-count: 2
      column-count: 2
      
      > div
      > p
        display: inline-block
  
  h2
    font-size: 2em
    text-transform: none
  
  .questions
  .project
  .people
    background: $lightgrey
    
  .project
    padding-bottom: 0
  
    > div
      border-bottom: 1px solid grey
      padding-bottom: 4em
  
  .people
  
    dd
    dt
      margin: 0 0 1em
      font-size: 1.2em
      line-height: 1.5
    
    > div
      -moz-column-count: 3
      -webkit-column-count: 3
      column-count: 3