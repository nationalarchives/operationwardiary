.home
  
  .button
    display: inline-block
    font-size: 1.2em
    font-family: $mont
    line-height: 3
    background: $midgreen
    color: $white
    padding: .25em 4em
    border-radius: 3px
    text-decoration: none
    text-transform: uppercase
    
    &:hover
    &:focus
      background: $darkgreen
    
  .description
    width: 100%
    text-align: center
    padding-bottom: 2em
    vertical-align: middle
    background: transparent
    overflow: hidden
    
    h1
      font-size: 1.4em
      font-family: $mont
      margin: 5em auto 0
      opacity: 1
      padding: 0

    div
      font-size: 1.2em
      line-height: 1.6
      font-family: $mont
      opacity: 1
      padding: 2em 0
      width: 50%
      margin: auto
    
.logos
  font-size: 1.2em
  line-height: 1.6
  font-family: $mont
  text-align: center
  width: 100%
  margin-top: 2em
  clear: both
  
  img
    display: inline
    line-height: 75px
    vertical-align: middle
    padding: 0 6em 0 3em
  
  p
    color: $lightblue
  
  a
    color: $white
    text-decoration: none
    
    &:hover
    &:focus
      text-decoration: underline