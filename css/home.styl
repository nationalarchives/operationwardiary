.home
  
  .button
    display: inline-block
    font-size: 1.2em
    font-family: $mont
    line-height: 3
    background: $midgreen
    color: $white
    padding: 0 1em
    border-radius: 3px
    text-decoration: none
    text-transform: uppercase
    
  .description
    width: 1185px
    text-align: center
    height: 600px
    vertical-align: middle
    background: transparent
    overflow: hidden
    
    &:after
      content: "";
      background: url(images/backgrounds/Royal_Irish_Rifles_ration_party_Somme_July_1916.jpg) no-repeat
      background-size: 100%
      opacity: 0.1
      top: -200px
      left: 0
      right: 0
      height: 800px
      position: absolute
      z-index: -1
    
    h1
      font-size: 2em
      font-family: $mont
      width: 30%
      margin: 5em auto 0
      opacity: 1
      padding: 0
      
      &:before
      &:after
        content: '\2014'
        display: block

    div
      font-size: 1.2em
      line-height: 1.6
      opacity: 1
      padding: 2em 0
      width: 40%
      margin: auto