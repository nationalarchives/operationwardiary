#guide
  background: $white
  color: $darkgrey
  padding: 1em
  
  label
    font-size: 1.2em
    line-height: 1.5
    font-family: $mont
    text-transform: uppercase
  
  .accordion
    font-size: 1em
    border: none
    
    .ui-accordion-header
    .ui-accordion-content
      border: none
      background: $white
      color: $darkgrey
    
    .ui-accordion-header
      background: $midgreen
      color: $white
      padding-left: 1em
      background-image: none
      
      &:hover
      &:focus
        background: $lightgreen
      
      &.ui-state-active
        background: $darkgreen

.main
  width: 63%
  padding: 0
  margin: 0 1% 0 0
  display: inline-block
  vertical-align: top
  font-size: 1em
  font-family: $helv
  
  
  h2
  h3
  h4
    font-size: 1.2em
    line-height: 1.5
    font-family: $mont
  
  p
    font-size: 1.2em
    line-height: 1.5
  
.sidebar
  width: 35%
  display: inline-block
  vertical-align: top
  margin: 0