#guide:after
  content: "";
  background: url(images/backgrounds/Royal_Irish_Rifles_ration_party_Somme_July_1916.jpg) no-repeat
  background-size: 100%
  opacity: 0.1
  top: -200px
  left: 0
  right: 0
  height: 840px
  position: absolute
  z-index: -1
  
#guide
  background: $white
  color: $darkgrey
  padding: 1em
  
  .accordion
    font-size: 1em
    border: none
    
    .ui-accordion-header
    .ui-accordion-content
      border: none
    
    .ui-accordion-header
      background: $midgreen
      color: $white
      padding-left: 1em
      background-image: none
      
      &:hover
      &:focus
      &.ui-state-active
        background: $lightgreen

.main
  width: 63%
  padding: 0
  margin: 0 1% 0 0
  display: inline-block
  vertical-align: top
  font-size: 1em
  font-family: $helv
  
  
  h2
  h3
  h4
    font-size: 1.2em
    line-height: 1.4
    font-family: $mont
  
  p
    font-size: 1.2em
    line-height: 1.4
  
.sidebar
  width: 35%
  display: inline-block
  vertical-align: top
  margin: 0