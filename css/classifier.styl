#classify:after
  content: "";
  background: url(images/backgrounds/Royal_Irish_Rifles_ration_party_Somme_July_1916.jpg) no-repeat
  background-size: 100%
  opacity: 0.1
  top: -200px
  left: 0
  right: 0
  height: 840px
  position: absolute
  z-index: -1

.ui-widget
  font-size .8em

.zoom-controls
  position:absolute
  top: 200px;
  right: 0
  z-index: 10
  color: $white
  width: 50px
  padding-top: 40px
  background: $black url(images/icons/magnify.png) 13px 10px no-repeat
  font-family: $mont
  
  button
    width: 50px
    padding: 0
    font-size: 2em
    line-height: 50px
    border: none
    background: #000
    color: #fff
    
  
  button[disabled]
    visibility: hidden
  
.tools
  width: 185px
  float: left
  margin: 0
  height: 600px
  font-size: 1.2em
  font-family: $mont
  
  h2
    color: $white
    background-color: $black
    line-height: 50px
    vertical-align: middle
    margin: 0
    white-space: nowrap
    padding-left: 15px
    font-size: 1em
    font-weight: normal
    text-transform: none
    
    &:before
      width: 20px
      height: 20px
      background: $white
      color: $black
      display: inline-block
      border-radius: 10px
      line-height: 20px
      text-align: center
      margin-right: 15px
  
  p
    width: 128px
    margin-left: 3px
    
  ul
    text-indent: 0
    padding: 0
    margin: 0 0 1em
    list-style-type: none
    overflow: hidden
    
    li
      overflow: hidden
      padding: 0
      margin: 3px 3px 0
    
      label
        display: block
        color: $white
        line-height: 40px
        padding-left: 50px
        background-position: 10px center
        background-repeat: no-repeat
        white-space: nowrap
        border-radius: 3px
      
        &:hover
          background-color: $darkgrey
          
        &.icon-blank
          background-image: url(images/icons/page_blank.png)
          
        &.icon-cover
          background-image: url(images/icons/page_cover.png)
        
        &.icon-diary
          background-image: url(images/icons/page_diary.png)
          
        &.icon-orders
          background-image: url(images/icons/page_orders.png)
          
        &.icon-report
          background-image: url(images/icons/page_report.png)
          
        &.icon-signals
          background-image: url(images/icons/page_signalpad.png)
        
        &.icon-other
          background-image: url(images/icons/page_other.png)
        
        &.icon-diaryDate
        &.icon-date
          background-image: url(images/icons/date.png)
          
        &.icon-time
          background-image: url(images/icons/time.png)
            
        &.icon-place
          background-image: url(images/icons/place.png)
          
        &.icon-person
          background-image: url(images/icons/person.png)

        &.icon-unit
          background-image: url(images/icons/unit.png)
          
        &.icon-activity
          background-image: url(images/icons/activity.png)
          
        &.icon-quarters
          background-image: url(images/icons/quarters.png)
        
        &.icon-casualties
          background-image: url(images/icons/casualty.png)
          
        &.icon-weather
          background-image: url(images/icons/weather.png)
          
        &.icon-reference
          background-image: url(images/icons/reference.png)
          
        &.icon-mapRef
          background-image: url(images/icons/map_ref.png)
          
        &.icon-gridRef
          background-image: url(images/icons/grid.png)
        
        &.icon-title
          background-image: url(images/icons/title.png)
          
      input[type=radio]
        position: absolute
        left: -9999px
        
        &:focus + label
          background-color: $lightgrey
      
        &:checked + label
          opacity: 1
          background-color: #333
    
  div.types
    transition: width 1s
    width: 73%
    float:left
    background: $darkgrey
    height: 600px
    
    &.closed
      width: 27%
      
    h2:before
      content: '1'
      

    label
      line-height: 40px
      opacity: .6
      
      &:hover
        opacity: .8
      
    input[type=radio]
    
      &:focus + label
        opacity: .8

      &:checked + label
        opacity: 1

  div.toolbar
    transition: width 1s
    width: 73%
    overflow: hidden
    float: left
    background: $green
    height: 600px
    
    &.closed
      width: 27%
    
    #document-metadata
      text-align: center
      
    .tags
    
      h2
        background-color: $midgreen
      
        &:before
          content: '2'
          color: $midgreen

      label
        line-height: 40px


        &:hover
          background-color: $lightgreen


      input[type=radio]
    
        &:focus + label
          background-color: $lightgreen

        &:checked + label
          background-color: $darkgreen
  
.diary-title
  background: $greyblue
  color: $white
  text-align: center
  position: relative
  float: left
  width: 100%
  padding: 0
  line-height: 40px
  vertical-align: middle
  font-size: 1em
  
  h1
    font-size: 1.2em
    margin: 0
    font-family: $mont
    font-weight: normal
  
  .page-tools
    position: absolute
    top: 0
    right: 5px
    
    button
      border: none
      margin: 0
      margin-left: 5px
      background-color: transparent
      background-repeat: no-repeat
      color: $white
      border-radius: 3px
      
      &.finish
        padding: 0 1em
        background: $green
        line-height: 30px
        font-size: 1.2em
      
      &.timeline
      &.discuss
        width: 30px
        height: 30px
        text-indent: 10000px
        overflow: hidden
        
      &.active
        background-color: $darkgrey
      
      &.timeline
        background-image: url(images/icons/timeline.png)
      
      &.discuss
        background-image: url(images/icons/talk.png)
    
.subject-container
  position: relative
  float:left
  min-width: 600px
  max-width: 1000px
  min-height: 360px
  max-height: 600px
  background: $lightblue
  overflow: hidden
  
  img
    max-width: 100%
    max-height: 100%
    
    &#loader
      transition: left 1s
      position: absolute
      left: 200px
      top: 0
      z-index: 10
      
      &.offscreen
        left: 2000px
        opacity: 0
    
  svg
    z-index: 1
    
    text
    tspan
      font-size: 1.2em
      font-family: $mont
      color: grey
  
  
#document-metadata
  color: #fff
  clear: left

.marking-tool-controls
  position: absolute
  top: 0
  left: 25%
  width: 176px
  padding: 2px
  background-color: #fff
  border: 1px solid #aaa
  box-shadow: 0 3px 3px 2px #666;
  z-index: 10
  display: block
  overflow: hidden
  font-size: 1.2em
  font-family: $mont
  color: grey

  &.closed
    z-index: -1
    display: none
    
  &.selected
    z-index: 20
    
    &.closed
      z-index: -1
  
  .suggestions
    width: 90%
    padding: 2px 5px
    
    label span
      display: block
      width: 100%
  
  &.place
    max-width: 200px
    min-height: 150px

    input[type=radio]
      position: absolute
      left: -9999px
      
      &:checked + span
        background: #333
        color: #fff
    
  label
    display: block
    line-height: 1.5
    clear: left
    overflow: hidden
    
  input
    font-size: 1em
    border-radius: 3px
    color: $darkgrey
    font-family: $mont
    
    &[type=checkbox]
      float: right
    
    &[type=number]
      width: 3em
      margin-bottom: .5em
      float: right
  
    &[type=text]
      width: 95%
      margin: auto
      margin-bottom: .5em
  
  select
    width: 98%
    margin-bottom: .5em
    font-size: 1em
    border-radius: 3px
    color: $darkgrey
    font-family: $mont
    border: 1px solid $lightgrey
  
  &.time
  
    select
      width: 32%
    
  div.deleted
  div.saved
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    display:none;
    background: #333
    color: #fff
    font-size: 2em
    text-align: center
    font-family: $mont
  
  div.saved
    background: $green
    background: rgba( 86, 148, 112, 0.6 )
  
  div.deleted
    background: red
    background: rgba( 255, 0, 0, 0.6 )
  
  button
    background-color: #aaa
    color: #fff
    border: none
    width: 48%
    display: inline-block
    font-size: 1.2em
    line-height: 2
    margin: 0
    border-radius: 3px
    
    &[name=toggle]
      background: $green
      margin-right: 2%
      
.subject-comments
  background: $black
  color: $white
  padding: 0
  position: absolute !important
  right: 100px
  top: 55px
  width: 280px
  z-index: 20
  text-align: left
  max-height: 0
  transition: max-height 1s
  overflow: hidden
  font-size: 1.2em
  line-height: 1.4
  
  &.open
    max-height: 550px
  
  h2
    text-align: center
    background: $greyblue
    font-family: $mont
    font-weight: normal
    font-size: 1em
    margin: 0
    padding: 1em 0
    
  textarea
    width: 260px
    height: 3em
    margin: 0
    padding: 10px
    border: none
    display: block
  
  button
    text-align: center
    width: 100%
    margin: 0;
    border: none
    background: $green
    color: #fff
    line-height: 30px
    vertical-align: middle
    text-transform: uppercase
    
  div:nth-of-type(2n+1)
    background: $darkgrey
    
  p.author
    line-height: 20px
    vertical-align: middle
    color: $darkblue
    img
      width: 20px
      height: 20px
      float: left
      margin-right: 5px
    
  p
    margin: 0 10px
    padding 5px 0

div.subject-timeline
  @extends .subject-comments
  right: 70px

  ul
    list-style-type: none
    margin: 0
    padding: 0
    text-indent: 0
    max-height: 300px
    min-height: 150px
    overflow: auto

    li
      padding: .5em 0 0
      margin: 0
      background: $midgreen
      
      .time
        line-height: 1.6
        background: $black
        margin: 0
        padding: 0 5em .5em 3em
        clear: both
        > b
          font-weight: normal
          color: $lightblue
          
        &:first-of-type
          padding-top: .5em
  
      &:nth-of-type(2n+1)
      
        .time
          background: $darkgrey

    
      > span
        display: inline-block
        padding: 0 0 .3em
        margin: 0
        
        &.date
          font-family: $mont
          font-weight: bold
          padding-left: 3em
          background: $midgreen
          
          + .placename
            padding-left: .5em
        
        &.placename
          margin: 0
          padding-right: 1em
          padding-left: 5em
          float: right
        
