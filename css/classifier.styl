.ui-widget
  font-size .8em

.zoom-controls
  position:absolute
  top: 200px;
  right: 0
  z-index: 10
  background: #000
  color: #fff
  width: 50px
  
  button
    width: 50px
    padding: 0
    font-size: 2em
    line-height: 50px
    border: none
    background: #000
    color: #fff
    
  
  button[disabled]
    visibility: hidden
  
.tools
  width: 200px
  float: left
  margin: 0
  background: #ccc
  height: 600px
  font-size: 1.2em
  
  h2
    background-position: 10px center
    background-repeat: no-repeat
    color: #fff
    line-height: 30px
    margin: 0
    white-space: nowrap
    padding-left: 50px
    font-size: 1em
    font-weight: normal
    text-transform: none
    
  ul
    text-indent: 0
    padding: 0
    margin: 0 0 1em
    list-style-type: none
    overflow: hidden
    
    li
      overflow: hidden
      padding: 5px 5px 0
    
      label
        display: block
        font-family: 'Helvetica Neu', 'Helvetica', 'Arial', serif
        color: #fff
        line-height: 40px
        padding-left: 50px
        background-position: 10px center
        background-repeat: no-repeat
        white-space: nowrap
      
        &:hover
          background-color: $darkgrey
          
        &.icon-blank
          background-image: url(images/icons/page_blank.png)
          
        &.icon-cover
          background-image: url(images/icons/page_cover.png)
        
        &.icon-diary
          background-image: url(images/icons/page_diary.png)
          
        &.icon-orders
          background-image: url(images/icons/page_orders.png)
          
        &.icon-report
          background-image: url(images/icons/page_report.png)
          
        &.icon-signals
          background-image: url(images/icons/page_signalpad.png)
        
        &.icon-other
          background-image: url(images/icons/page_other.png)
        
        &.icon-diaryDate
        &.icon-date
          background-image: url(images/icons/date.png)
          
        &.icon-time
          background-image: url(images/icons/time.png)
            
        &.icon-place
          background-image: url(images/icons/place.png)
          
        &.icon-person
          background-image: url(images/icons/person.png)

        &.icon-unit
          background-image: url(images/icons/unit.png)
          
        &.icon-activity
          background-image: url(images/icons/activity.png)
          
        &.icon-quarters
          background-image: url(images/icons/quarters.png)
        
        &.icon-casualties
          background-image: url(images/icons/casualty.png)
          
        &.icon-weather
          background-image: url(images/icons/weather.png)
          
        &.icon-reference
          background-image: url(images/icons/reference.png)
          
        &.icon-mapRef
          background-image: url(images/icons/map_ref.png)
          
        &.icon-gridRef
          background-image: url(images/icons/grid.png)
          
      input[type=radio]
        position: absolute
        left: -9999px
      
        &:checked + label
          font-weight: bold
          opacity: 1
          background-color: $darkgrey
      
        &:focus + label
          background-color: $lightgrey
    
  div.types
    transition: width 1s
    width: 75%
    float:left
    background: $darkgrey
    height: 600px
    
    &.closed
      width: 25%
      
    h2
      background-image: url(images/icons/tools.png)

    label
      line-height: 40px
      opacity: .4
      
      &:hover
        opacity: .8
      
    input[type=radio]

      &:checked + label
        opacity: 1

      &:focus + label
        opacity: .8

  div.toolbar
    transition: width 1s
    width: 75%
    overflow: hidden
    float: left
    background: $green
    height: 600px
    
    &.closed
      width: 25%
    
    h2
      background-image: url(images/icons/tools.png)

    label
      line-height: 40px


      &:hover
        background-color: $lightgreen


    input[type=radio]
    
      &:focus + label
        background-color: $lightgreen

      &:checked + label
        background-color: $darkgreen
  
.diary-title
  background: $greyblue
  color: $white
  text-align: center
  position: relative
  float: left
  width: 100%
  
  h1
    font-size: 1.2em
    line-height: 30px
    margin: 0
  
  .page-tools
    position: absolute
    top: 2px
    right: 4px
    
    button
      padding: .3em
      
      &.finish
        padding-left: 1em
        padding-right: 1em
        background: $green
        color: $white
        border: none
    
.subject-container
  position: relative
  float:left
  min-width: 600px
  max-width: 1000px
  min-height: 360px
  max-height: 600px
  background: $lightblue
  overflow: hidden
  
  img
    max-width: 100%
    max-height: 100%
    
    &#loader
      transition: left 1s
      position: absolute
      left: 200px
      top: 0
      z-index: 10
      
      &.offscreen
        left: 2000px
        opacity: 0
    
  svg
    z-index: 1
  
  
#document-metadata
  color: #fff
  clear: left

div.subject-timeline
  position: absolute !important
  right: 70px
  top: 60px
  z-index: 20
  width: 200px
  color: white
  background: $black
  text-align: left
  padding: 0
  font-size: 1em
  line-height: 1.4
  max-height: 0
  transition: max-height 1s
  overflow: hidden
  
  &.open
    max-height: 550px
  
  h2
    text-align: center
    background: $greyblue
    margin: 0
    padding: 1em 0
  
  ul
    list-style-type: none
    margin: 0
    padding: 0
    text-indent: 0
    height: 200px
    overflow: auto
    
    li
      padding: .5em 1em
      margin: 0
      
      &:nth-child(2n+1)
        background: $darkgrey
    
      &.date
        margin-bottom: 0
        padding-bottom: .5em
        
        > span
          padding: .5em 0
      .placename
        margin: 0
        padding: 0.5em 0
        margin-bottom: .5em
      
      .time
        margin: 0 0 .5em 0
        > b
          font-weight: normal
  
.marking-tool-controls
  position: absolute
  top: 0
  left: 25%
  width: 176px
  padding: 2px
  background-color: #fff
  border: 1px solid #aaa
  box-shadow: 0 3px 3px 2px #666;
  z-index: 10
  display: block
  overflow: hidden

  &.closed
    z-index: -1
    display: none
    
  &.selected
    z-index: 20
    
    &.closed
      z-index: -1
  
  .suggestions
    width: 90%
    padding: 2px 5px
    
    label span
      display: block
      width: 100%
  
  &.place
    max-width: 200px
    min-height: 150px

    input[type=radio]
      position: absolute
      left: -9999px
      
      &:checked + span
        background: #333
        color: #fff
    
  label
    display: block
    
  input[type=number]
    width: 3em
    
  div.deleted
  div.saved
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    display:none;
    background: #333
    color: #fff
    font-size: 2em
    text-align: center
  
  div.saved
    background: $green
    background: rgba( 86, 148, 112, 0.6 )
  
  div.deleted
    background: red
    background: rgba( 255, 0, 0, 0.6 )
  
  button
    background-color: #aaa
    color: #fff
    border: none
    width: 47%
    display: inline-block
    font-size: 1.2em
    line-height: 2
    
    &[name=toggle]
      background: $green
      
.subject-comments
  background: #333
  color: #fff
  padding: 0
  position: absolute !important
  right: 100px
  top: 60px
  width: 200px
  z-index: 20
  text-align: left
  max-height: 0
  transition: max-height 1s
  overflow: hidden
  
  &.open
    max-height: 550px
  
  h2
    text-align: center
    background: $greyblue
    margin: 0
    padding: 1em 0
    
  textarea
    width: 100%
    height: 3em
    margin: 0
    padding: 0
    border: none
  
  button
    text-align: center
    width: 100%
    margin: 0;
    border: none
    background: $green
    color: #fff
    line-height: 20px
    vertical-align: middle
    
  p.author
    line-height: 20px
    vertical-align: middle
    img
      width: 20px
      height: 20px
      float: left
      margin-right: 5px
    
  p
    margin: 10px