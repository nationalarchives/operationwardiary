date = purple
time = purple
place = green
person = red
activity = blue

.ui-widget
  font-size .8em

.zoom-controls
  position:absolute
  top: 5px;
  left: 5px
  z-index: 10

.subject-container
  width: 1024px
  height: 560px
  border: 1px solid #333
  
  img
    max-width: 1024px
    max-height: 560px
    
  svg
    z-index: 1
    
  text, tspan
    font-size: 14px
    
    &.date
      color: date
    &.time
      color: time
    &.person
      color: person
    &.place
      color: place
    &.activity
      color: activity
  
ul.categories, ul.documents
  position: absolute
  top: 5px
  right: 5px
  list-style-type: none
  
  li
    display: inline-block
    
    label
      font-family: 'Helvetica Neu', 'Helvetica', 'Arial', serif
      background-color: #333
      color: #fff
      padding: 3px;
      opacity: .4
      
      &:hover
        opacity: .6
    
    &.date label, &.diaryDate label
      background-color: date
    &.time label, &.diaryTime label
      background-color: time
    &.place label
      background-color: place
    &.person label
      background-color: person
    &.activity label
      background-color: activity
      
    
    input[type=radio]
      position: absolute
      left: -9999px
      
      &:checked + label
        font-weight: bold
        opacity: 1
      
      &:focus + label
        opacity: .8
        
ul.documents
  position: relative

ul.categories
  visibility: hidden
  z-index: 10
  
.marking-tool-controls
  position: absolute
  top: 0
  left: 25%
  max-width: 176px
  padding: 2px
  background-color: #ddd
  border: 1px solid #aaa
  z-index: 10
  display: block
  
  &.selected
    z-index: 20
  
  &.place
    max-width: 200px
    min-height: 150px
    
  label
    display: block
    
  input[type=number]
    width: 3em
  
  button
    background-color: #333
    color: #fff
    border: 1px solid #000
    padding: 1px;
    
  &.date button, &.diaryDate button
    background-color: date
  &.time button, &.diaryTime button
    background-color: time
  &.place button
    background-color: place
  &.person button
    background-color: person
  &.activity button
    background-color: activity
    
.marking-tool-controls.closed
  display: none;
  z-index: -1