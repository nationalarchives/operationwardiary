date = purple
time = purple
place = green
person = red
activity = blue

.ui-widget
  font-size .8em

.zoom-controls
  position:absolute
  top: 200px;
  right: 0
  z-index: 10
  background: #000
  color: #fff
  width: 50px
  
  button
    width: 50px
    padding: 0
    font-size: 2em
    line-height: 50px
    border: none
    background: #000
    color: #fff
    
  
  button[disabled]
    visibility: hidden
  
.tools
  width: 200px
  float: left
  margin: 0
  text-align: center
  background: #ccc
  height: 550px
  font-size: 1.5em
  
  h2
    background: #000
    color: #fff
    line-height: 30px
    margin: 0
    
  ul
    text-indent: 0
    padding: 0
    margin: 0 0 1em
    list-style-type: none
    overflow: hidden
    
    li
      overflow: hidden
    
      label
        display: block
        font-family: 'Helvetica Neu', 'Helvetica', 'Arial', serif
        background-color: #333
        color: #fff
        padding: 3px;
        opacity: .4
      
        &:hover
          opacity: .6
      
    
      input[type=radio]
        position: absolute
        left: -9999px
      
        &:checked + label
          font-weight: bold
          opacity: 1
          background: #000
      
        &:focus + label
          opacity: .8
  
.diary-title
  background: #333
  color: #fff
  text-align: center
  position: relative
  float: left
  width: 100%
  
  h1
    font-size: 1.2em
    line-height: 30px
    margin: 0
  
  .page-tools
    position: absolute
    top: 2px
    right: 4px
    
.subject-container
  position: relative
  float:left
  min-width: 600px
  max-width: 1000px
  min-height: 360px
  max-height: 550px
  background: #666
  overflow: hidden
  
  img
    max-width: 100%
    max-height: 100%
    
    &#loader
      transition: left 1s
      position: absolute
      left: 200px
      top: 0
      z-index: 10
      
      &.offscreen
        left: 2000px
    
  svg
    z-index: 1
    
  text, tspan
    font-size: 14px
    
    &.date
      color: date
    &.time
      color: time
    &.person
      color: person
    &.place
      color: place
    &.activity
      color: activity
        
div.types
  width: 75%
  float:left
  background: #000
  height: 550px
  
  label
    line-height: 2
  
div.toolbar
  width: 25%
  overflow: hidden
  float: left
  background: #333
  height: 550px
  
  label
    height: 40px
    line-height: 40px
    font-size: .8em
  
  
#document-metadata
  color: #fff
  clear: left
  
.marking-tool-controls
  position: absolute
  top: 0
  left: 25%
  width: 176px
  padding: 2px
  background-color: #fff
  border: 1px solid #aaa
  box-shadow: 0 3px 3px 2px #666;
  z-index: 10
  display: block
  overflow: hidden

  &.closed
    z-index: -1
    display: none
    
  &.selected
    z-index: 20
    
    &.closed
      z-index: -1
  
  &.place
    max-width: 200px
    min-height: 150px
    
  label
    display: block
    
  input[type=number]
    width: 3em
    
  div.deleted
  div.saved
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    display:none;
    background: #333
    color: #fff
    font-size: 2em
    text-align: center
  
  div.saved
    background: green
    background: rgba( 0, 255, 0, 0.6 )
  
  div.deleted
    background: red
    background: rgba( 255, 0, 0, 0.6 )
  
  button
    background-color: #aaa
    color: #fff
    border: none
    width: 47%
    display: inline-block
    font-size: 1.2em
    line-height: 2
    
    &[name=toggle]
      background: green
      
.subject-comments
  background: #333
  color: #fff
  padding: 5px
  position: absolute
  right: 0
  top: 30px
  z-index: 20
  text-align: left