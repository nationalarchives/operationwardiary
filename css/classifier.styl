date = purple
time = purple
place = green
person = red
activity = blue

.ui-widget
  font-size .8em

.zoom-controls
  position:absolute
  top: 200px;
  right: 0
  z-index: 10
  background: #000
  color: #fff
  width: 50px
  
  button
    width: 50px
    padding: 0
    font-size: 2em
    line-height: 50px
    border: none
    background: #000
    color: #fff
    
  
  button[disabled]
    visibility: hidden
  
.tools
  width: 200px
  float: left
  margin: 0
  text-align: center
  background: #ccc
  height: 600px
  font-size: 1.5em
  
  h2
    background: #000
    color: #fff
    line-height: 30px
    margin: 0
    
  ul
    text-indent: 0
    padding: 0
    margin: 0 0 1em
    list-style-type: none
    overflow: hidden
    
    li
      overflow: hidden
    
      label
        display: block
        font-family: 'Helvetica Neu', 'Helvetica', 'Arial', serif
        background-color: #333
        color: #fff
        padding: 3px;
        opacity: .4
      
        &:hover
          opacity: .6
      
    
      input[type=radio]
        position: absolute
        left: -9999px
      
        &:checked + label
          font-weight: bold
          opacity: 1
          background: #000
      
        &:focus + label
          opacity: .8
  
.diary-title
  background: #333
  color: #fff
  text-align: center
  position: relative
  float: left
  width: 100%
  
  h1
    font-size: 1.2em
    line-height: 30px
    margin: 0
  
  .page-tools
    position: absolute
    top: 2px
    right: 4px
    
.subject-container
  position: relative
  float:left
  min-width: 600px
  max-width: 1000px
  min-height: 360px
  max-height: 600px
  background: #666
  overflow: hidden
  
  img
    max-width: 100%
    max-height: 100%
    
    &#loader
      transition: left 1s
      position: absolute
      left: 200px
      top: 0
      z-index: 10
      
      &.offscreen
        left: 2000px
        opacity: 0
    
  svg
    z-index: 1
    
  text, tspan
    font-size: 12px
    
    &.date
      color: date
    &.time
      color: time
    &.person
      color: person
    &.place
      color: place
    &.activity
      color: activity
        
div.types
  width: 75%
  float:left
  background: #000
  height: 600px
  
  label
    line-height: 2
  
div.toolbar
  width: 25%
  overflow: hidden
  float: left
  background: #333
  height: 600px
  
  label
    height: 40px
    line-height: 40px
    font-size: .8em
  
  
#document-metadata
  color: #fff
  clear: left

div.subject-timeline
  position: absolute
  right: 70px
  top: 60px
  z-index: 20
  width: 200px
  color: white
  background: #333
  text-align: left
  height: 300px
  overflow: auto
  padding: 0 1em
  font-size: 1em
  line-height: 1.4
  display: none
  
  &.open
    display: block
  
  h2
    text-align: center
  
  ul
    list-style-type: none
    margin: 0
    padding: 0
    text-indent: 0
    
    li
      padding: 0
      margin: 0
    
      &.date
        margin-bottom: 0
        padding-bottom: .5em
        
        > span
          display: block
          text-align: center
          border-bottom: 1px solid white
          padding: .5em 0
      .place
        border-bottom: 1px solid white
        > p.placename
          margin: 0
          padding: 0.5em 0
          text-align: center
          border-bottom: 1px solid white
          margin-bottom: .5em
      
      .time
        padding: 0 0 .5em 0
        > b
          color: cyan
          font-weight: normal
  
.marking-tool-controls
  position: absolute
  top: 0
  left: 25%
  width: 176px
  padding: 2px
  background-color: #fff
  border: 1px solid #aaa
  box-shadow: 0 3px 3px 2px #666;
  z-index: 10
  display: block
  overflow: hidden

  &.closed
    z-index: -1
    display: none
    
  &.selected
    z-index: 20
    
    &.closed
      z-index: -1
  
  .suggestions
    width: 90%
    padding: 2px 5px
    
    label span
      display: block
      width: 100%
  
  &.place
    max-width: 200px
    min-height: 150px

    input[type=radio]
      position: absolute
      left: -9999px
      
      &:checked + span
        background: #333
        color: #fff
    
  label
    display: block
    
  input[type=number]
    width: 3em
    
  div.deleted
  div.saved
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    display:none;
    background: #333
    color: #fff
    font-size: 2em
    text-align: center
  
  div.saved
    background: green
    background: rgba( 0, 255, 0, 0.6 )
  
  div.deleted
    background: red
    background: rgba( 255, 0, 0, 0.6 )
  
  button
    background-color: #aaa
    color: #fff
    border: none
    width: 47%
    display: inline-block
    font-size: 1.2em
    line-height: 2
    
    &[name=toggle]
      background: green
      
.subject-comments
  background: #333
  color: #fff
  padding: 0
  position: absolute
  right: 0
  top: 30px
  z-index: 20
  text-align: left
  max-height: 0
  transition: max-height 1s
  overflow: hidden
  
  &.open
    max-height: 550px
    
  textarea
    width: 100%
    height: 3em
    margin: 0
    padding: 0
    border: none
  
  button
    text-align: center
    width: 100%
    margin: 0;
    border: none
    background: #999
    color: #fff
    line-height: 20px
    vertical-align: middle
    
  p.author
    line-height: 20px
    vertical-align: middle
    img
      width: 20px
      height: 20px
      float: left
      margin-right: 5px
    
  p
    margin: 10px