.stack
  position: relative
  
  > div
    @extends #site-container
    display: none
    min-height: 200px
    
  > div.active
  > div:target
    display: block
  
.zooniverse-footer
  @extends #site-container

.zooniverse-top-bar
  background: $black
  color: $white
  
.site-navigation
  text-align: center
  font-size: 1.5em
  background: $black
  color: $white
  
  h1
    font-family: serif
  
  .links
    overflow: hidden
    width: 800px
    margin: 0 auto
    position: relative
    
    button
      position: absolute
      top: 10px
      right: 100px
  
  ul
    list-style: none
    height: 2em
    overflow: hidden
    transition: height 1s
    margin: 0
    
    &.closed
      height: 0
    
    li
      display: inline-block
      margin: 0 1em
      text-transform: uppercase
  
  a
    text-decoration: none
    color: white