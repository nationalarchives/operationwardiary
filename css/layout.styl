#app
  margin-top: 50px

.stack
  position: relative
  
  > div
    @extends #site-container
    display: none
    min-height: 200px
    
  > div.active
    display: block

.zooniverse-footer
  @extends #site-container

.site-navigation
  text-align: center
  font-size: 1.5em
  
  .links
    overflow: hidden
    width: 600px
    margin: 0 auto
    position: relative
    
    button
      position: absolute
      top: 10px
      right: 100px
  
  ul
    list-style: none
    height: 2em
    overflow: hidden
    transition: height 1s
    
    &.closed
      height: 0
    
    li
      display: inline-block
  
  a
    text-decoration: none