#profile
#recents
  background: $white
  color: $text_lightgrey
  padding: 5em 1em 0
  font-family: $mont
  
  h1
    font-size: 2.4em
    line-height: 1
    text-transform: none
    margin-bottom: 1.1em
  
  h2
  p
  ul
    font-size: 1.4em
    line-height: 2
    
    &.caption
      font-size: 1em
      line-height: 1.4
    
  ul
    margin: 0
    padding: 0
    text-align: center
  
  li
    display: inline-block
    vertical-align: top
    padding: 1.4em 0
    width: 14em
    min-height: 100px
    border: 1px solid $lightgrey
    border: 1px solid rgba(238, 238, 238, 0.9)
    border-radius: 6px
    margin: .8em
    text-align: center
    color: #999
    
    a
      color: #999
      text-decoration: none
  
  h1
  h2
    color: $text_darkgrey
    
  .diaries
  
    a
      display: inline-block
      margin-bottom: 1em
  
    b
      color: $text_darkgrey
      font-size: 1.4em
      display: block
      line-height: 1.5
    
    span
      line-height: 1
  
  .annotations
    li
      width: 5em
      padding: .6em
      font-size: 2em
      color: $text_darkgrey
      span
        display: block
        font-size: .6em
        color: $text_lightgrey
    
  .recents
    text-align: center
    list-style-type: none
  
    li
      padding: 10px
      height: 180px
      width: 180px
      
      a
        display: inline-block
        line-height: 180px
        vertical-align: middle
  
    img
      max-width: 180px
      max-height: 180px
      vertical-align: middle